doctype
html
  head
    title Garage Door Control
    link(rel='apple-touch-icon', sizes='120x120', href='/static/touch-icon-iphone-retina.png')
    link(rel='stylesheet', href='/static/style.css')
    meta(name="viewport", content="width=device-width, user-scalable=no, minimal-ui")
  body
    if pi.status == 0
     h1 The garage door is closed.
    else
     h1 The garage door is open.
    form(action='/' + garageId + '/activate' method="post")
     input(type="password", name="pin")
     input(type="submit", value="Activate Door")
    form(action='/' + garageId + '/refresh')
     input(type="submit", value="Refresh Status")
  footer
    hr
    p Last update #{pi.updated}.
